{
  "appId": "com.screenplay.ai",
  "productName": "Screenplay AI",
  "directories": {
    "buildResources": "build",
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "package.json"
  ],
  "mac": {
    "artifactName": "Screenplay-AI-${version}-${arch}-mac.${ext}",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "category": "public.app-category.productivity",
    "identity": null,
    "hardenedRuntime": false,
    "gatekeeperAssess": false
  },
  "generateUpdatesFilesForAllChannels": true,
  "differentialPackage": true,
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "publish": {
    "provider": "github",
    "owner": "PuhPahNo",
    "repo": "screenplay-ai",
    "releaseType": "release"
  },
  "releaseInfo": {
    "releaseNotesFile": "CHANGELOG.md"
  }
}